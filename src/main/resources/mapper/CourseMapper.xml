<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.gdpi.course.mapper.CourseMapper">

    <delete id="deleteById" parameterType="integer">
        DELETE course  WHERE id = #{id}
    </delete>

    <insert id="addCourse" parameterType="course" useGeneratedKeys="true" keyColumn="id">
        INSERT INTO course(tea_id, `name`, `number`, cover, description)
        VALUES(#{teaId}, #{name}, #{number}, #{cover}, #{description})
    </insert>

    <select id="findByTeaId" parameterType="integer" resultType="course">
        SELECT * FROM course WHERE tea_id = #{teaId}
    </select>

    <select id="findByNumber" resultType="course">
        SELECT * FROM course WHERE number = #{number}
    </select>

</mapper>